{
  "manifest_version": 2,

  "name": "Torflix",
  "description": "Torflix http://torflix.jaredatron.com",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Toflix"
  },
  "permissions": [
    "activeTab",
    "http://torflix.jaredatron.com/",
    "http://*.google.com/",
    "https://*.google.com/",

    "debugger",
    "alarms",
    "tabs",
    "bookmarks",
    "http://www.blogger.com/",
    "http://*.google.com/",
    "unlimitedStorage"
  ]
}
