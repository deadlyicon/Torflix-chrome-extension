{
  "manifest_version": 2,

  "name": "Torflix",
  "description": "Torflix http://torflix.jaredatron.com",
  "version": "1.1",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://torflix.jaredatron.com/*"],
      "js": ["content_script.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Toflix"
  },
  "permissions": [
    "tabs",
    "http://torflix.jaredatron.com/*",

    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ]
}
